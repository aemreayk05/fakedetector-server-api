# FakeDetector SQL Server Environment Variables

# Sunucu ayarları
PORT=3000
NODE_ENV=development

# API Güvenlik
API_KEY=your-secret-api-key-here

# Veritabanı ayarları (SQLite için gerekli değil)
DB_PATH=./database.sqlite

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/server.log

# CORS ayarları
CORS_ORIGIN=*

# Güvenlik
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true 